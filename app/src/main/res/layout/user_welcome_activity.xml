<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="38dp"
    android:paddingRight="38dp"
    tools:context="com.hxs.fitnessroom.module.user.WelcomeActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎你来\n好享瘦健身房"
        android:includeFontPadding="false"
        android:textColor="@color/colorListItemTitleText"
        android:textSize="@dimen/login_title_size"
        android:lineSpacingExtra="10dp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <View
        android:id="@+id/temp_line"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:background="@color/colorListItemContentText"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/dont_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随便看看"
        android:textSize="18dp"
        android:textColor="@color/colorListItemContentText"
        app:layout_constraintTop_toBottomOf="@+id/temp_line"
        android:layout_marginTop="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />


    <TextView
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="18dp"
        android:background="@drawable/bg_gradient_d068ff_e452b1"
        app:layout_constraintTop_toBottomOf="@+id/dont_login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="114dp"
        android:text="登录"
        />
    <TextView
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="注册"
        android:textColor="@color/colorListItemTitleText"
        android:layout_marginTop="12dp"
        />

</android.support.constraint.ConstraintLayout>

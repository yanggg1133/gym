<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/contentLoadingProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/network_error_tip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18dp"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/colorListItemContentText"
        android:text="@string/network_error_tip"
        android:padding="50dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/other_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:text=""
        />

    <ImageView
        android:id="@+id/other_tip_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@+id/other_tip"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        />

</RelativeLayout>
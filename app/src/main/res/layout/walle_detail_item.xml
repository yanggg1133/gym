<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pay_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:text="付款成功"
        android:textColor="@color/colorListItemTitleText"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/wallet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:text="2017-06-22 14:25:54"
        android:textColor="@color/colorListItemContentText"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/pay_msg"
        app:layout_constraintTop_toBottomOf="@+id/pay_msg"/>


    <TextView
        android:id="@+id/wallet_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginTop="12dp"
        android:text="$15.00"
        android:textColor="@color/colorListItemTitleText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pay_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginTop="8dp"
        android:text="微信支付"
        android:textColor="@color/colorListItemContentText"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallet_money"/>

    <view android:layout_width="350dp" android:layout_height="1dp"
          android:layout_marginRight="0dp"
          android:layout_marginTop="18dp"
          android:textColor="#818DCF"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/wallet_date"/>
</android.support.constraint.ConstraintLayout>
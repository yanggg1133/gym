<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorListItemTitleText"
        android:textSize="@dimen/item_sub_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/store_message"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:text="健身房"
        />

    <TextView
        android:id="@+id/store_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-06-22 14:25:54"
        android:textColor="@color/colorListItemContentText"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/store_name"
        app:layout_constraintTop_toBottomOf="@+id/store_name"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:text="已完成"
        android:textSize="15dp"
        android:textColor="@color/colorListItemTitleText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="70dp"
        android:background="@color/colorDividerLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        />
</android.support.constraint.ConstraintLayout>
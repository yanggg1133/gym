<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <com.hxs.fitnessroom.widget.MyToolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        >
    </com.hxs.fitnessroom.widget.MyToolbar>

    <com.hxs.fitnessroom.module.home.widget.RulerViewLayout
        android:id="@+id/rulerViewLayout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar"
        >

        <com.hxs.fitnessroom.module.home.widget.ruler.VerticalScaleView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@null"
            >

            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_gravity="right|center_vertical"
                android:background="#dec"
                />
        </FrameLayout>
    </com.hxs.fitnessroom.module.home.widget.RulerViewLayout>

    <TextView
        android:id="@+id/body_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />
</RelativeLayout>

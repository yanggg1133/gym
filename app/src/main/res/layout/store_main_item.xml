<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="10dp"
    android:background="?android:attr/selectableItemBackground"
    >
    <ImageView
        android:id="@+id/store_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/store_name"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="@id/store_image"
        app:layout_constraintLeft_toRightOf="@+id/store_image"
        app:layout_constraintRight_toLeftOf="@+id/store_distance"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorListItemTitleText"
        android:alpha="0.8"
        android:singleLine="true"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/store_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/store_name"
        app:layout_constraintTop_toBottomOf="@id/store_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:textSize="14dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/colorListItemSubTitleText"
        android:alpha="0.6"
        />

    <TextView
        android:id="@+id/store_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/store_name"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toTopOf="@id/store_name"
        app:layout_constraintBottom_toBottomOf="@id/store_name"
        android:textSize="13dp"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="@color/colorDividerLine"
        app:layout_constraintTop_toBottomOf="@id/store_image"
        />
</android.support.constraint.ConstraintLayout>

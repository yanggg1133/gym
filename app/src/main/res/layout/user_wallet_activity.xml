<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.hxs.fitnessroom.widget.MyToolbar style="@style/ToolbarStyle" />



    <TextView
        android:id="@+id/money_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余额"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/money"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textSize="12dp"
        android:textColor="@color/colorListItemContentText"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥260"
        app:layout_constraintTop_toBottomOf="@+id/money_tip"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="4dp"
        android:textSize="16dp"
        android:textColor="@color/colorListItemTitleText"
        />
    <TextView
        android:id="@+id/goto_recharge_button"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="充值"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/bg_gradient_d068ff_e452b1"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:textSize="14dp"
        />

    <View
        android:id="@+id/divider_line_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDividerLine"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/deposit_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="押金"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_1"
        app:layout_constraintBottom_toTopOf="@+id/deposit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textSize="12dp"
        android:textColor="@color/colorListItemContentText"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥260"
        app:layout_constraintTop_toBottomOf="@+id/deposit_tip"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="4dp"
        android:textSize="16dp"
        android:textColor="@color/colorListItemTitleText"
        />
    <TextView
        android:id="@+id/goto_deposit_button"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="去支付"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/bg_gradient_d068ff_e452b1"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_1"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:textSize="14dp"
        />

    <View
        android:id="@+id/divider_line_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDividerLine"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_1"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示：如果要使用健身房需要先交押金"
        android:textColor="@color/colorListItemContentText"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/divider_line_2"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/deposit_return_tip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="您的押金已退回"
        android:textColor="@color/colorListItemTitleText"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />



    <com.hxs.fitnessroom.widget.LoadingView style="@style/LoadingViewStyle"/>

</android.support.constraint.ConstraintLayout>
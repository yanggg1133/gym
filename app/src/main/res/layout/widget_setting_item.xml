<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="@dimen/setting_item_icon_size"
        android:layout_height="@dimen/setting_item_icon_size"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:scaleType="centerCrop"
        android:tint="@color/colorListItemSubTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/setting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorListItemTitleText"
        android:textSize="@dimen/item_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/setting_icon"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/setting_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorTextDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="4dp"
        app:srcCompat="@drawable/ic_right_goto"
        />

    <TextView
        android:id="@+id/setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:textColor="@color/colorListItemSubTitleText"
        android:textSize="@dimen/item_sub_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/setting_right_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/setting_right_image"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/setting_right_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="0px"
        android:layout_height="1px"
        android:background="@color/colorDividerLine"
        app:layout_constraintLeft_toLeftOf="@+id/setting_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</merge>
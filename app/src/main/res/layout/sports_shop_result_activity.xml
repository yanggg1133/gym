<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <com.hxs.fitnessroom.widget.MyToolbar style="@style/ToolbarStyle"/>
    <View
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_gradient_953fff_437dff"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />
    <TextView
        android:id="@+id/tips_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/bg_view"
        app:layout_constraintBottom_toBottomOf="@+id/bg_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="支付成功，请取走您的商品"
        android:textSize="17dp"
        />
    <ImageView
        android:id="@+id/tips_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_pay_chenggong_small"
        app:layout_constraintTop_toTopOf="@+id/tips_text"
        app:layout_constraintBottom_toBottomOf="@+id/tips_text"
        app:layout_constraintRight_toLeftOf="@+id/tips_text"
        android:layout_marginRight="8dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bg_view"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_1"
        app:layout_constraintLeft_toLeftOf="@+id/divider_line_1"
        android:text="商品名称"
        android:textSize="15dp"
        android:textColor="@color/colorListItemContentText"
        />
    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bg_view"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_1"
        app:layout_constraintRight_toRightOf="@+id/divider_line_1"
        android:text="商品名称"
        android:textSize="15dp"
        android:textColor="@color/colorListItemContentText"
        />
    <View
        android:id="@id/divider_line_1"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/colorDividerLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_view"
        android:layout_marginTop="@dimen/item_height"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_1"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_2"
        app:layout_constraintLeft_toLeftOf="@+id/divider_line_1"
        android:text="单价"
        android:textSize="15dp"
        android:textColor="@color/colorListItemContentText"
        />
    <TextView
        android:id="@+id/shop_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_1"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_2"
        app:layout_constraintRight_toRightOf="@+id/divider_line_1"
        android:text="商品名称"
        android:textSize="15dp"
        android:textColor="@color/colorListItemContentText"
        />

    <View
        android:id="@id/divider_line_2"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/colorDividerLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_1"
        android:layout_marginTop="@dimen/item_height"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_2"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_3"
        app:layout_constraintLeft_toLeftOf="@+id/divider_line_2"
        android:text="数量"
        android:textSize="15dp"
        android:textColor="@color/colorListItemContentText"
        />
    <TextView
        android:id="@+id/shop_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_2"
        app:layout_constraintBottom_toTopOf="@+id/divider_line_3"
        app:layout_constraintRight_toRightOf="@+id/divider_line_2"
        android:text="商品名称"
        android:textSize="15dp"
        android:textColor="@color/colorListItemContentText"
        />

    <View
        android:id="@id/divider_line_3"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/colorDividerLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_2"
        android:layout_marginTop="@dimen/item_height"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/action_button"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_gradient_d068ff_e452b1"
        app:layout_constraintTop_toBottomOf="@+id/divider_line_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:text="返回健身房"
        android:textSize="17dp"
        />



</android.support.constraint.ConstraintLayout>

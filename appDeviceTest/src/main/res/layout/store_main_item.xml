<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/store_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/store_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />


    <TextView
        android:id="@+id/store_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/store_image"
        app:layout_constraintLeft_toLeftOf="@+id/store_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/bg_gradient_a385ff_c45eff"
        android:text="暴满"
        android:alpha="0.7"
        />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/store_image"
        app:layout_constraintLeft_toRightOf="@+id/store_image"
        app:layout_constraintRight_toLeftOf="@+id/store_distance"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorListItemTitleText"
        android:singleLine="true"
        android:textSize="@dimen/item_text_size"
        />
    <ImageView
        android:id="@+id/store_status_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_status_qingxian"
        app:layout_constraintTop_toBottomOf="@+id/store_name"
        app:layout_constraintLeft_toLeftOf="@+id/store_name"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/store_status_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorListItemTitleText"
        android:textSize="@dimen/item_sub_content_text_size"
        app:layout_constraintTop_toTopOf="@+id/store_status_icon"
        app:layout_constraintBottom_toBottomOf="@+id/store_status_icon"
        app:layout_constraintLeft_toRightOf="@+id/store_status_icon"
        android:layout_marginLeft="10dp"
        android:text="暴满"
        />

    <TextView
        android:id="@+id/store_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/store_status_icon"
        app:layout_constraintTop_toBottomOf="@id/store_status_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/item_sub_content_text_size"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/colorListItemSubTitleText"
        />

    <TextView
        android:id="@+id/store_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/store_name"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toTopOf="@id/store_name"
        app:layout_constraintBottom_toBottomOf="@id/store_name"
        android:textSize="13dp"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        />


    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/colorDividerLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/store_image"
        />
</merge>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="28dp"
        android:src="@mipmap/beijing"
        />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健身房"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintLeft_toLeftOf="@id/background"
        app:layout_constraintRight_toRightOf="@+id/background"
        android:layout_marginTop="32dp"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="待锻炼"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintRight_toRightOf="@+id/background"
        android:translationX="6dp"
        android:background="@mipmap/biaoqian_bg"
        />

    <com.hxs.fitnessroom.widget.SettingItemView
        android:id="@+id/store_address"
        android:layout_width="0dp"
        android:layout_height="@dimen/setting_item_height"
        app:layout_constraintRight_toRightOf="@id/background"
        app:layout_constraintLeft_toLeftOf="@id/background"
        app:layout_constraintTop_toBottomOf="@+id/store_name"
        android:layout_marginTop="38dp"
        >
    </com.hxs.fitnessroom.widget.SettingItemView>
    <com.hxs.fitnessroom.widget.SettingItemView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="@dimen/setting_item_height"
        app:layout_constraintRight_toRightOf="@id/background"
        app:layout_constraintLeft_toLeftOf="@id/background"
        app:layout_constraintTop_toBottomOf="@+id/store_address"
        >
    </com.hxs.fitnessroom.widget.SettingItemView>
    <com.hxs.fitnessroom.widget.SettingItemView
        android:id="@+id/money"
        android:layout_width="0dp"
        android:layout_height="@dimen/setting_item_height"
        app:layout_constraintRight_toRightOf="@id/background"
        app:layout_constraintLeft_toLeftOf="@id/background"
        app:layout_constraintTop_toBottomOf="@+id/time"
        >
    </com.hxs.fitnessroom.widget.SettingItemView>

    <TextView
        android:id="@+id/goto_open"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_gradient_d068ff_e452b1_r50"
        android:text="开门"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/money"
        app:layout_constraintRight_toRightOf="@id/background"
        app:layout_constraintLeft_toLeftOf="@id/background"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/cancel_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="取消预约"
        app:layout_constraintTop_toBottomOf="@+id/goto_open"
        app:layout_constraintRight_toRightOf="@id/background"
        app:layout_constraintLeft_toLeftOf="@id/background"
        android:alpha="0.7"
        android:layout_marginTop="15dp"
        />

</android.support.constraint.ConstraintLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogStyle" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="listPreferredItemPaddingLeft">40dip</item>
    </style>
    <style name="DialogFragmentTheme" parent="android:Theme.Translucent.NoTitleBar">
    </style>

    <style name="ToolbarStyle" parent="Base.V7.Theme.AppCompat.Light">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>



</resources>

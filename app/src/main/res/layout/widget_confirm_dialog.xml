<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id="@+id/dialog_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDialogBackground"
        android:alpha="0"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_round_ffffff_r6"
        android:alpha="0.4"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/content"
            android:textColor="#333333"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:minHeight="96dp"
            android:gravity="center"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:lineSpacingExtra="5dp"
            android:textColor="#333333"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:text=""
            />

        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="138dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/content"
            app:layout_constraintLeft_toLeftOf="@+id/content"
            android:gravity="center"
            android:textColor="#333333"
            android:text="取消"
            />
        <TextView
            android:id="@+id/confirm_action"
            android:layout_width="138dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            app:layout_constraintRight_toRightOf="@+id/content"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:textColor="#FF668C"
            android:gravity="center"
            android:text="确定"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintRight_toRightOf="@+id/content"
            app:layout_constraintBottom_toTopOf="@+id/cancel_action"
            android:background="@color/colorDividerLine"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintRight_toRightOf="@id/content"
            app:layout_constraintBottom_toBottomOf="@+id/cancel_action"
            android:background="@color/colorDividerLine"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
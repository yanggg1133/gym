<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pay_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="付款成功"
        android:layout_marginLeft="16dp"
        android:textSize="16dp"
        android:textColor="@color/colorListItemTitleText"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/walle_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/colorListItemContentText"
        android:text="2017-06-22 14:25:54"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/pay_msg"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/pay_msg"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:textColor="@color/colorListItemTitleText"
        android:layout_height="wrap_content"
        android:text="$15:00"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="14dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/pay_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:textSize="14dp"
        android:textColor="@color/colorListItemContentText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginRight="14dp"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <view android:layout_width="350dp" android:layout_height="1dp" android:textColor="#818DCF"
          android:layout_marginRight="0dp"
          app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="18dp"
          app:layout_constraintTop_toBottomOf="@+id/walle_detail_date"/>
</android.support.constraint.ConstraintLayout>